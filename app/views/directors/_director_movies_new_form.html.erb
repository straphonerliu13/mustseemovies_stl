<!-- Form movie start -->
<%= form_with(model: @movie, local: true) do |f| %>
<!-- Form movie end -->

  <!-- Label and input for year start -->
  <div class="form-group">
    <%= f.label :year %>

    <!-- Input for year start -->
    <%= f.text_field :year, class: "form-control" %>
    <!-- Input for year end -->
  </div>
  <!-- Label and input for year end -->

  <!-- Label and input for duration start -->
  <div class="form-group">
    <%= f.label :duration %>

    <!-- Input for duration start -->
    <%= f.text_field :duration, class: "form-control" %>
    <!-- Input for duration end -->
  </div>
  <!-- Label and input for duration end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>

    <!-- Input for description start -->
    <%= f.text_field :description, class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for director_id start -->
  <!-- Input for director_id start -->
  <%= f.hidden_field :director_id, value: @director.id %>
  <!-- Input for director_id end -->
  <!-- Label and input for director_id end -->

  <!-- Label and input for actor_id start -->
  <div class="form-group">
    <%= f.label :actor_id %>

    <!-- Input for actor_id start -->
    <%= f.collection_select :actor_id, Actor.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for actor_id end -->
  </div>
  <!-- Label and input for actor_id end -->

  <%= f.submit "Create movie", class: "btn btn-block btn-outline-secondary" %>
<% end %>
