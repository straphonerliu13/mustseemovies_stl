<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Movies

    <a data-toggle="collapse" href="#actor_movies_new_form">
      Add movie
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @actor.movies.each do |movie| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to movie, movie %>

        <%= link_to movie, method: :delete, data: { confirm: "Do you really want to delete this movie" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="actor_movies_new_form">
        <%= render partial: "actors/actor_movies_new_form" %>
      </div>
    </div>

  </ul>
</div>
